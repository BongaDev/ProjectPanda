<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.MyAppointments"
             BackgroundColor="{StaticResource BackgroundColor}"
            
             >
    <ContentPage.Content>
        <StackLayout>
            

                <Grid Padding="10">
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>



                    </Grid.RowDefinitions>

                <StackLayout  Margin="15,22,15,0" Grid.Row="0">
                     
                            <Label  Text="Set Appointment" FontSize="30"
                      
                    
                    TextColor="Black" 
                    
                    HorizontalTextAlignment="Center" 
                    
                 
                     
                    />

                       
                    </StackLayout>


                    <StackLayout  Grid.Row="1" Margin="15,0,15,0"  >
                        <Button BackgroundColor="{StaticResource Primary}" 
                    
                    
                    Text="Doctor"
                    TextColor="Black"
                    FontSize="20"
                    BorderColor="Black" 
                    BorderWidth="2" 
                    HeightRequest="60"
                    Clicked="Doctor_Button_Clicked"
                     Image="doct.png"     
                    Margin="10,20,20,0"
                 />
                    </StackLayout>


                    <StackLayout  Grid.Row="2" Margin="15,0,15,0" >
                        <Button TextColor="Black"
                    WidthRequest="23"
                    HeightRequest="60"
                    BackgroundColor="{StaticResource Primary}"
                    Text="Date" FontSize="20" 
                    BorderColor="Black" 
                    BorderWidth="2"  
                   Image="calendar64.png"
                     Margin="10,20,20,0"
                   
                  />
                    </StackLayout>

                    <!--The date picker-->
                    <StackLayout Grid.Row="2" Margin="30,22,38,0">
                    <DatePicker  HeightRequest="56" WidthRequest="10" BackgroundColor="{StaticResource Primary}" Opacity="0" x:Name="UserDatepicker" DateSelected="Datepick" >
                        <DatePicker.MinimumDate>
                            01/01/2018
                        </DatePicker.MinimumDate>

                        <DatePicker.MaximumDate>
                            03/01/2018
                        </DatePicker.MaximumDate>

                        <DatePicker.Date>
                           01/12/2018
                        </DatePicker.Date>
                    </DatePicker>
                </StackLayout>

                    <StackLayout Grid.Row="3" Margin="15,0,15,10" >
                        <Button TextColor="Black"
                    WidthRequest="23"
                    HeightRequest="60"
                    BackgroundColor="{StaticResource Primary}" 
                    Text="Time"
                    FontSize="20"
                    BorderColor="Black" 
                    BorderWidth="2"
                      Margin="10,20,20,0"                 
                    Image="clock.png"
                    />
                    </StackLayout>

                    <StackLayout Grid.Row="3" Margin="30,22,38,0">
                        <TimePicker  HeightRequest="56" WidthRequest="4" BackgroundColor="{StaticResource Primary}" Opacity="0" x:Name="Timepick" />
                    </StackLayout>


                    <StackLayout   Grid.Row="4" Margin="24,20,34,20"  VerticalOptions="Start">
                    <Image Source="check.png">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Confirm"/>
                        </Image.GestureRecognizers>
                    </Image>
                    </StackLayout>



             
                </Grid>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ProjectPanda.Pages.DetailFillPageChronic"
             Title="Chronic Disease"
             BackgroundColor="{StaticResource Primary}"
             >
	<ContentPage.Content>


        <Grid VerticalOptions="Center">
           
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                
            </Grid.ColumnDefinitions>


            <Label Grid.Column="0" HorizontalOptions="Center" FontSize="18" WidthRequest="250" Margin="20,0,0,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Have a Chronic disease?"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Switch Grid.Column="1" HorizontalOptions="Start" Margin="10,0,0,10" VerticalOptions="Center"/>

        </Grid>


    </ContentPage.Content>
</ContentPage>

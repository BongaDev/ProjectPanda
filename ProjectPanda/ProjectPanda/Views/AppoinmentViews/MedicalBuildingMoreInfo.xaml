<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.AppoinmentViews.MedicalBuildingMoreInfo"     
             Padding="15"
             >
    
      
        <!--The page with more info regarding the practice-->

        <ScrollView>
                <StackLayout>

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" TextColor="Black" Text="Gray Hospital" Style="{StaticResource HeaderMoreInformation}"/>

                            <Image Grid.Row="1" Source="GreysHospital.jpg"  Aspect="AspectFit"/>


                         </Grid>
                    
                </StackLayout>  
        </ScrollView>

   
</ContentPage>
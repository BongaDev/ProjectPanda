<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.DetailedUserInfo"
             Title="Detailed Information"            
             BackgroundColor="{StaticResource BackgroundColor}"
             >
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Padding="20">


                <Button Text="My Allergies" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="allergyList" Image="allergiesIcon.png"/>


                <Button Text="My Medication" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="medciationList" Image="medicationBottle.png"/>


                <Button Text="My Chronic Diseases" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="chronicDiseaseList" Image="chronicDisease.png"/>



            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
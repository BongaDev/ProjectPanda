<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.DetailedUserInfo"
             Title="Detailed Information"            
             BackgroundColor="{StaticResource BackgroundColor}"
             >
    <ContentPage.Content>
        <StackLayout Padding="20">

            <Button Text="My Allergies" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="allergyList"/>
            <Button Text="My Medication" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="medciationList"/>
            <Button Text="My Chronic Diseases" HeightRequest="150" BackgroundColor="{StaticResource ButtonLoginColour}" Clicked="chronicDiseaseList"/>
       
        </StackLayout>    
    </ContentPage.Content>
</ContentPage>
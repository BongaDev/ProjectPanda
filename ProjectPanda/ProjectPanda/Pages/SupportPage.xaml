<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Pages.SupportPage"
             BackgroundColor="#92da69"
            Title="Contact Us"
             >
    <ContentPage.Content>
        <Grid  VerticalOptions="Center" RowSpacing="50" Padding="20" >

       

            <Grid.RowDefinitions >
                <RowDefinition Height="*"/>
                <RowDefinition  Height="70" />
                <RowDefinition  Height="70"/>
                          
            </Grid.RowDefinitions>


            <StackLayout  Grid.Row="0">

                <Button Image="facebooksupport.png" BackgroundColor="#92da69"  Text="Facebook: RillaSoftworks" TextColor="White"/>

            </StackLayout>



            <StackLayout Grid.Row="1"  >
                <Button Image="twittersupport.png" Text="Twitter: @RillaEver" TextColor="White"   BackgroundColor="#92da69"/>
            </StackLayout>

            <StackLayout Grid.Row="2" >
                <Button Image="mailsupport.png"  Text="Email: pandamed20@gmail.com" TextColor="White"   BackgroundColor="#92da69"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
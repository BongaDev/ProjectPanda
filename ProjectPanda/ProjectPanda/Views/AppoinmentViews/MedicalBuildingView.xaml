<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.MedicalBuildingView"
             BackgroundColor="{StaticResource BackgroundColor}" >
    <ContentPage.Content>

        <ListView x:Name="MedicalBuilding"
                  SeparatorVisibility="None" 
                  HasUnevenRows="True"
                  ItemsSource="{Binding Practices}"
                  IsPullToRefreshEnabled="True"
                  CachingStrategy="RecycleElement"
                  HeightRequest="100"
                  SelectedItem="MedicalBuilding_ItemSelected"
                  ItemSelected="MedicalBuilding_ItemSelected">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ContentView Padding="5">

                            <Frame OutlineColor="LimeGreen"  Padding="10"  CornerRadius="7"  VerticalOptions="StartAndExpand">

                                <Grid Padding="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                  

                                    <StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="StartAndExpand" Margin="0,0,5,0" Orientation="Horizontal">

                                        <Grid>
                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="50"/>



                                            </Grid.ColumnDefinitions>

                                            <StackLayout Grid.Column="0">
                                            <Image Source="{Binding ProfileImage}"  HeightRequest="150"  VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Aspect="AspectFit"/>
                                            </StackLayout>

                                            
                                            
                                        </Grid>
                                                              
                                      

                                    </StackLayout>


                                    <StackLayout Grid.Row="1"  VerticalOptions="StartAndExpand" Margin="3,1,1,10">

                                        <Label Text="{Binding PracticeName}" FontSize="20" VerticalOptions="Start" Style="{DynamicResource HeaderAttributes}" LineBreakMode="NoWrap" />

                                    </StackLayout>

                                    <StackLayout Grid.Row="2" Margin="3,1,1,10">
                                        <Label  Text="{Binding Distance }"   TextColor="Green" Style="{DynamicResource InformationLabel}" LineBreakMode="NoWrap"/>
                                    </StackLayout>
                                    

                                </Grid>


                            </Frame>
                        </ContentView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </ContentPage.Content>
</ContentPage>
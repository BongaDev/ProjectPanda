<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.AppoinmentViews.CalenderView"
             xmlns:calender="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar">
    <ContentView.Content>
        
        <calender:Calendar 
			Padding="10,0,10,0" 
			SelectedBorderWidth="4" 
			DisabledBorderColor="Black"
			ShowNumberOfWeek="false"
			StartDay="Monday"
			TitleLabelTextColor="Purple"
			TitleLeftArrowTextColor="Blue"
			SelectedDate="{Binding Date}"
			SpecialDates="{Binding OpenBoookings}"
			DateCommand="{Binding DateChosen}" >
		</calender:Calendar>
    </ContentView.Content>

</ContentView>
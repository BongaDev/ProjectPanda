<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Pages.Payments.PaymentOptions">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding CresditCardNumber}" Placeholder="Enter your Credit Card details here"/>
            <StackLayout Orientation="Horizontal">
                <Entry Text="{Binding ExpiryDate}" Placeholder="Expiry Date"/>
                <Entry Text="{Binding CVV}" Placeholder="CVV"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
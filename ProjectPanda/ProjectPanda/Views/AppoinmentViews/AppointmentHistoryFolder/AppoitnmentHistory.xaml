<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Pages.AppointmentHistoryFolder.AppoitnmentHistory"
              BackgroundColor="{StaticResource BackgroundColor}"  
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <ListView  x:Name="AppointmentHistory" ItemsSource="{Binding _History}"  SeparatorVisibility="None" 
                  HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>

                                <MenuItem Clicked="OnMore" CommandParameter="{Binding .}"  Text="More" />

                                <MenuItem Clicked="OnDelete" CommandParameter="{Binding RemoveAppointmentLog}" Text="Delete" IsDestructive="True" />

                            </ViewCell.ContextActions>

                            <ContentView Padding="5">

                                <Frame  OutlineColor="LimeGreen"  Padding="10"  CornerRadius="7"  VerticalOptions="StartAndExpand">

                                    <Grid Padding="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackLayout Grid.Row="0">
                                            <Label Text="{Binding DateSeen}"  TextColor="#f35e20" />
                                        </StackLayout>

                                        <StackLayout Grid.Row="1">
                                            <Label Text="{Binding Time}"   TextColor="#503026" />
                                        </StackLayout>

                                        <StackLayout Grid.Row="2">
                                            <Label Text="{Binding DoctorSeen}" />
                                        </StackLayout>
                                    </Grid>

                                </Frame>
                            </ContentView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPanda.Views.Delivery"
             BackgroundColor="{StaticResource BackgroundColor}"
             
             >
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>

                <Grid Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <StackLayout Grid.Row="0">
                        <Grid>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackLayout Margin="20,15,15,5" Grid.Row="0" >

                                
                                <Label Text="Doctor prescription" HorizontalOptions="Start"  TextColor="Black" Style="{DynamicResource FontStyle}"/>
                      

                            </StackLayout>

                            <StackLayout Margin="10,10,15,5" Grid.Row="1" >
                                <Frame BackgroundColor="White" VerticalOptions="FillAndExpand" HeightRequest="50" OutlineColor="Black" x:Name="DocPrescription"  CornerRadius="8">
                                    
                                </Frame>
                            </StackLayout>

                            <StackLayout Grid.Row="2"  Margin="10,10,15,10" x:Name="MedDeliveryButton" IsVisible="False">
                                <Button  Text="Deliver medication" TextColor="Black" HeightRequest="65"  BorderWidth="2" BackgroundColor="{StaticResource ButtonLoginColour}" BorderColor="Black"/>
                            </StackLayout>


                        </Grid>
                    </StackLayout>

                 
                    
                    
                    
                    <StackLayout Grid.Row="1">
                        <Grid>
                           
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                              
                            </Grid.RowDefinitions>

                            <StackLayout Grid.Row="0" Margin="20,60,15,5" >
                                <Label Text="Self prescription" TextColor="Black" Style="{DynamicResource FontStyle}"/>
                            </StackLayout>


                            
                                <StackLayout Grid.Row="1" Margin="5,5,15,5" >

                                    <StackLayout >
                                   <Button Text="Order Medicine" BackgroundColor="{StaticResource ButtonLoginColour}" Image="pill.png" VerticalOptions="Start" HeightRequest="65" Margin="8,8,8,8" BorderWidth="2" BorderColor="Black"/>
                                    </StackLayout>

                                </StackLayout>



                      

                            

                          
                        </Grid>
                    </StackLayout>
                
                </Grid>

        
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>